{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "CommonJS",
    "lib": ["es2015", "es2016", "es2017", "es2020", "ES2022", "ES2024", "dom", "ESNext"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "./proxy/dist/lib",
    "declarationDir": "./proxy/dist/types",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/proxy.ts"],
}
