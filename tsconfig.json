{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "CommonJS",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2022",
      "ES2024",
      "dom",
      "ESNext"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "dist/lib",
    "declarationDir": "dist/types",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noEmitOnError": false,
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": [
    "src",
    "integrationtests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
